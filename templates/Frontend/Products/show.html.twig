{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('product') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('product') }}
{% endblock %}

{% block body %}
	<section class="product-show row">
		<div class="col-md-6">
			{% include 'Frontend/Products/Show/_images.html.twig' %}
		</div>
		<div class="col-md-6">
			<div class="container">
				{% include 'Frontend/Products/Show/_addToCart.html.twig' %}
				{% include 'Frontend/Products/Show/_info.html.twig' %}
			</div>
		</div>
	</section>
	{% if product.productAssociations|length > 0 %}
		<section class="product-asso container mt-4">
			<h2>Vous aimerez aussi</h2>
			<div class="card-product-list">
				{% for productAsso in product.productAssociations %}
					{% include 'Components/Cards/_productCard.html.twig' with {product: productAsso.associatedProduct} %}
				{% endfor %}
			</div>
		</section>
	{% endif %}
	<section class="product-show-more container mt-4">
		<h2>Ã€ voir aussi</h2>
		<div class="slider-model-wrapper">
			<div class="slider-model">
				{% include 'Components/Slider/_sliderModel.html.twig' %}
			</div>
		</div>
	</section>
{% endblock %}
