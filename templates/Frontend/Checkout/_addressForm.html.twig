{{ form_start(form, {attr: {'data-controller' : 'selectAddress'}}) }}

{% if addresses|length > 1  %}

    <div class="dropdown open mb-3">
        <button
            class="btn btn-secondary dropdown-toggle"
            type="button"
            id="triggerId"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
        >
            Carnet d'adresses
        </button>
        <div class="dropdown-menu" aria-labelledby="triggerId">
            {% for address in addresses %}
                <button class="dropdown-item" data-address="{{ address.address }}" data-zip-code="{{ address.zipCode }}" data-city="{{ address.city }}">{{ address }}</button>
            {% endfor %}
        </div>
    </div>
    

{% endif %}


{{ form_row(form.address) }}

<div class="row">
    <div class="col-md-4">
        {{ form_row(form.zip_code) }}
    </div>
    <div class="col-md-8">
        {{ form_row(form.city) }}
    </div>
</div>

<button class="btn btn-secondary" type="submit">Valider mes informations</button>

{{ form_end(form) }}