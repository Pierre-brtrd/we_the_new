{% extends 'Backend/base.html.twig' %}

{% block title %}
	Administration des commandes
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des commandes</h1>
		<table class="admin-table table- mt-2">
			<thead>
				<th>ID</th>
				<th>Numéro</th>
				<th>Client</th>
				<th>Date création</th>
				<th>Date dernière modif</th>
				<th>Total</th>
				<th>Status</th>
				<th>Actions</th>
			</thead>
			<tbody>
				{% for order in orders %}
					<tr>
						<td>{{ order.id }}</td>
						<td>{{ order.number }}</td>
						<td>{{ order.user.fullname }}</td>
						<td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
						<td>{{ order.updatedAt|date('Y-m-d H:i:s') }}</td>
						<td>{{ (order.priceTTC + order.shippings|last.delivery.price)|format_currency('EUR') }}</td>
						<td>{{ order.status }}</td>
						<td class="actions">
							<div class="actions-container">
								<a href="{{ path('admin.orders.show', {id: order.id}) }}" class="btn btn-primary">Voir la commande</a>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}
