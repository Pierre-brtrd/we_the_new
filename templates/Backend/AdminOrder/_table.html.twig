<table class="admin-table mt-4">
	<thead>
		<tr>
			<th>Id</th>
			<th>Numéro</th>
			<th>Client</th>
			<th>Crée le</th>
			<th>Modifié le</th>
			<th>Status</th>
			<th>Prix</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for order in orders %}
			<tr>
				<td>{{ order.id }}</td>
				<td>{{ order.number }}</td>
				<td>{{ order.user.fullName}}</td>
				<td>{{ order.createdAt|format_datetime('full','short') }}</td>
				<td>{{ order.updatedAt }}</td>
				<td>{{ order.status }}</td>
				<td>{{ (order.priceTTC + order.shippings|last.delivery.price)|format_currency('EUR') }}</td>


				<td class="actions">
					<div class="actions-container">
						<a href="#" class="btn btn-warning">Voir la commande</a>
						<twig:DeleteForm action="{{ path('admin.adminOrder.delete', {id: order.id}) }}" message="Voulez-vous vraiment supprimer ce produit ?" csrftoken="{{ csrf_token('delete' ~ order.id) }}"/>
					</div>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
