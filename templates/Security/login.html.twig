{% extends 'base.html.twig' %}

{% block title %}
	Se connecter
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('login') }}
{% endblock %}

{% block body %}
	<section class="login-container">
		<h1 class="text-center">Connexion</h1>
		<p class="text-center">
			Entrez votre email et votre mot de passe<br/>pour continuer
		</p>
		<form action="{{ path('app.login') }}" method="POST">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<div class="mb-3">
				<label for="email">Email</label>
				<input type="email" id="email" name="_username" placeholder="email@domain.com" class="form-control" value="{{ lastUsername }}" required>
			</div>
			<div class="mb-3">
				<label for="password">Mot de passe</label>
				<input type="password" id="password" name="_password" placeholder="*********" class="form-control" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button type="submit" class="btn btn-dark mt-2">Se connecter</button>
		</form>
		<p class="text-center mt-4">
			Pas encore de compte ?
			<a href="{{ path('app.register') }}">Cr√©ez en un</a>
		</p>
	</section>
{% endblock %}
